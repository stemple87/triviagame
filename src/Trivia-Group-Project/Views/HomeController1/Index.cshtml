@*//NOTE OUT PARTIAL VIEW*@
<script type="text/javascript">
    function shuffleArray(array) {
        for (var i = array.length - 1; i > 0; i--) {
            var j = Math.floor(Math.random() * (i + 1));
            var temp = array[i];
            array[i] = array[j];
            array[j] = temp;
        }
        return array;
    }

    $(document).ready(function () {
        var arrayLength = 4;
        var numberArray = [];
        for (i = arrayLength; i > 0; i--)
        {
            numberArray.push(i);
        }
        
        var randomizedArray = shuffleArray(numberArray);
        
        
            
        $("#" + randomizedArray[0] + "").append("<button class='correct'>@Model["correctAnswer"]</button><br />")
        $("#" + randomizedArray[1] + "").append("<button class='fail'>@Model["otherAnswer1"]</button><br />")
        $("#" + randomizedArray[2] + "").append("<button class='fail'>@Model["otherAnswer2"]</button><br />")
        $("#" + randomizedArray[3] + "").append("<button class='fail'>@Model["otherAnswer3"]</button><br />")

        $(".correct").click(function () {
            alert("Correct!");

        })
        $(".fail").click(function () {
            alert("You suck!");

        })
     });
</script>